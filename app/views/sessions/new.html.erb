<div class="panel panel-default">
  <div class="panel-body">
   <%= form_for :user , :class => "form-horizontal" do |f| %>
	  <fieldset>
	    <div id="legend">
	      <legend class="">Login</legend>
	    </div>
	    <% flash.each do |message_type, message| %>
        	<div class="alert alert-<%= message_type %>"><%= message %></div>
      	<% end %>
	    <div class="control-group">
	      <!-- E-mail -->
	      <label class="control-label" for="email">E-mail</label>
	      <div class="controls">
	        <%= f.email_field :email , :class => "input-xlarge" , :id => "email" , :placeholder => "Email" %>
	      </div>
	    </div>
	 
	    <div class="control-group">
	      <!-- Password-->
	      <label class="control-label" for="password">Password</label>
	      <div class="controls">
	         <%= f.password_field :password , :class => "input-xlarge" , :id => "password" , :placeholder => "Password" %>
	      </div>
	    </div>
	 	<br>
	    <div class="control-group">
	      <!-- Button -->
	      <div class="controls">
	        <%= f.submit "Log in", :class => "btn" %>
	      </div>
	    </div>
	  <% end %>
  </div>
</div>