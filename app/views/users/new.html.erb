<div class="panel panel-default">
  <div class="panel-body">
   <%= form_for @user, :class => "form-horizontal" do |f| %>
	  <fieldset>

	    <div id="legend">
	      <legend class="">Sign up</legend>
	    </div>
			<%= render 'shared/error_messages' %>
		<div class="control-group">
	      <!-- First Name -->
	      <label class="control-label" for="email">First name</label>
	      <div class="controls">
	        <%= f.text_field :first_name , :class => "input-xlarge"  , :placeholder => "First name" %>
	      </div>
	    </div>
		
	    <div class="control-group">
	      <!-- Last Name -->
	      <label class="control-label" for="email">Last name</label>
	      <div class="controls">
	        <%= f.text_field :last_name , :class => "input-xlarge"  , :placeholder => "Last name" %>
	      </div>
	    </div>

	    <div class="control-group">
	      <!-- E-mail -->
	      <label class="control-label" for="email">E-mail</label>
	      <div class="controls">
	        <%= f.email_field :email , :class => "input-xlarge" , :id => "email" , :placeholder => "Email" %>
	      </div>
	    </div>
	 
		<div class="control-group">
	      <!-- Password-->
	      <label class="control-label" for="password">Password</label>
	      <div class="controls">
	         <%= f.password_field :password , :class => "input-xlarge" , :id => "password" , :placeholder => "Password" %>
	      </div>
	    </div>

	    <div class="control-group">
	      <!-- Password Confirmation-->
	      <label class="control-label" for="password">Confirmation</label>
	      <div class="controls">
	         <%= f.password_field :password_confirmation , :class => "input-xlarge" , :id => "password" , :placeholder => "Confirmation" %>
	      </div>
	    </div>
	 	<br>
	    <div class="control-group">
	      <!-- Button -->
	      <div class="controls">
	        <%= f.submit "Sign up", :class => "btn" %>
	      </div>
	    </div>
	  <% end %>
  </div>
</div>